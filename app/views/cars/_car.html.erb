<div id="<%= dom_id car %>" style="display:inline-block">
  <div class="card p-2 m-4" style="width: 20rem">
    <p>
      <strong>Car id:</strong>
      <%= car.car_id %>
    </p>

    <p>
      <strong>Make:</strong>
      <%= car.make %>
    </p>

    <p> 
    <strong>Model:</strong>
    <%= car.model %>
    </p>

    <p>
    <strong>Year:</strong>
    <%= car.year %>
    </p>

    <p>
    <strong>Odometer:</strong>
    <%= car.odometer %>
    </p>

    <p>
    <strong>Price:</strong>
    <%= car.price %>
    </p>

    <p>
    <strong>Description:</strong>
    <%= car.description %>
    </p>

    <p>
    <strong>Date added:</strong>
    <%= car.date_added %>
    </p>
  </div>
</div>
